@model IEnumerable<MarketForYou.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descricaoComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usernameCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usernameFei)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.feiraID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descricaoComentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usernameCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usernameFei)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.feiraID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.comentarioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.comentarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.comentarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
